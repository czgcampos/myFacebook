doctype html
html
	head
		title MyFacebook
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		.w3-container(style='text-align:center;padding-top:80px;max-width:400px;margin:0 auto;')
			.w3-card-4
				header.w3-container.w3-blue
					h1 myFacebook
				div
					h3 Log In
				div
					form.w3-container(method="POST" action="/users/login")
						input.w3-input(type="text" name="email" placeholder="example@mail.com" style='margin-top:10px')
						input.w3-input(type="password" name="password" placeholder="********" style='margin-top:10px')
						input.w3-btn.w3-blue(type="submit" value="Log In" style='margin-top:10px')
				hr
				div
					a.w3-btn.w3-blue(href='http://localhost:5000/feed', style='width:40%') Facebook
					a.w3-btn.w3-blue(href='http://localhost:5000/feed', style='margin-left:10px;width:40%') Google
				hr
				div
					a.w3-btn.w3-blue(href='http://localhost:5000/users/registar', style='width:83%;margin-bottom:20px') Registar