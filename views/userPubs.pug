extends header
block content
	each p in pubs
		.w3-container(style='margin-bottom:20px;margin-top:20px')
			div.w3-blue(style='padding:10px')
				h4(style='display:inline-block;') Autor: 
					a(href='sdsf')= p.autor
				h4(style='display:inline-block;float:right') Categoria: 
					if p.categoria
						a(href='gukjn')= p.categoria
			div(style='padding:10px')
				h6(style='display:inline-block;')
					if p.hashtag
						a(href='sdsf') ##{p.hashtag}
				h6(style='display:inline-block;float:right')
					if p.data
						a(href='gukjn' style='float:right')= p.data
				br
				a.w3-btn.w3-blue(href='fazerlike') Editar Privacidade
				a.w3-btn.w3-blue(href='fazerlike' style='padding-left:50px;padding-right:50px;float:right') Apagar
			div(style='padding-left:10px;padding-right:10px')
				p= p.texto
				a.w3-btn.w3-blue(href='fazerlike' style='padding-left:50px;padding-right:50px') Like: (#{p.likes})
				a.w3-btn.w3-blue(href='fazerlike' style='padding-left:50px;padding-right:50px;float:right') Partilhar
			hr
			div.w3-gray(style='padding-left:10px;padding-right:10px')
				h4(style='display:inline-block;') Coment√°rios:
				a.w3-btn.w3-blue(href='fazerlike' style='padding-left:50px;padding-right:50px;float:right;display:inline-block;margin-top:7px') Comentar
				br
				if p.comentarios
					each c in p.comentarios
						h5(style='padding-left:10px;display:inline-block;') Autor: 
							a(href='sdsf')= c.autor
						p(style='padding-left:10px;padding-right:10px')= c.comentario
						hr